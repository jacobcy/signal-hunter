# Core Telegram configuration
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
TELEGRAM_CHANNEL_ID=-100xxxxxxxxxx
# Optional: used for direct admin/alert chat routing
TELEGRAM_CHAT_ID=123456789

# AI APIs (use one or more)
OPENAI_API_KEY=sk-your_openai_key
DEEPSEEK_API_KEY=your_deepseek_key
OPENROUTER_API_KEY=your_openrouter_key

# Notion integration (only if you use Notion scripts)
NOTION_API_KEY=secret_your_notion_key
NOTION_PAGE_ID=your_root_page_id

# Optional: used by fetcher when set
BIRD_AUTH_TOKEN=your_bird_auth_token

# Optional: GitHub access token for scripts or local tooling
GITHUB_TOKEN=ghp_your_github_token
